{% if page.header.hook %}
	{% set hook = page.header.hook %}
	<div class="wrapper style2 evenpart">
		<section class="container">
			<div class="row double">
				<div class="{{ (hook.right.byline.text) ? '6u' : '12u' }}">
					<header class="major">
						<h2>{{ hook.left.headline|raw }}</h2>
						<span class="byline {{ hook.left.byline.class|replace({',': ' '}) }}">{{ hook.left.byline.text|raw }}</span>
					</header>
			{% if (hook.right.byline.text) %}
				</div>
				<div class="6u">
					<div class="{{ (hook.button.text) ? 'mb-2' }}">
						<header class="major">
							<h2>{{ hook.right.headline|raw }}</h2>
							<span class="byline {{ hook.right.byline.class|replace({',': ' '}) }}">{{ hook.right.byline.text|raw }}</span>
						</header>
					</div>
			{% endif %}
			{% if hook.button.text %}
				<div class="{{ hook.button.class }}">
					<a href="{{ hook.button.url }}" class="button mb-1">{{ hook.button.text|raw }}</a>
				</div>
			{% endif %}
				</div>
			</div>
		</section>
	</div>
{% endif %}