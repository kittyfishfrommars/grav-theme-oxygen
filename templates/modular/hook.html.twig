{% if page.header.hook %}
	{% set left = page.header.hook.left %}
	{% set right = page.header.hook.right %}
	{% set hasLeft = (left.headline) or (left.byline.text) or (left.button.text) %}
	{% set hasRight = (right.headline) or (right.byline.text) or (right.button.text) %}
	<div class="wrapper hook evenpart">
		<section class="container">
			<div class="row double">

				{% if hasLeft %}
					<div class="{{ (hasRight) ? '6u' : '12u' }}">
						<header class="major">
							<h2 class="text-center">{{ left.headline|raw }}</h2>
							<span class="byline {{ left.byline.class|replace({',': ' '}) }}">{{ left.byline.text|raw }}</span>
						</header>
						{% if left.button.text %}
							<div class="mt-3 {{ left.button.class }}">
								<a href="{{ left.button.url }}" class="button mb-1">{{ left.button.text|raw }}</a>
							</div>
						{% endif %}
					</div>
				{% endif %}

				{% if hasRight %}
					<div class="{{ (hasLeft) ? '6u' : '12u' }}">
						<div>
							<header class="major">
								<h2 class="text-center">{{ right.headline|raw }}</h2>
								<span class="byline {{ right.byline.class|replace({',': ' '}) }}">{{ right.byline.text|raw }}</span>
							</header>
						</div>
						{% if right.button.text %}
							<div class="mt-3 {{ right.button.class }}">
								<a href="{{ right.button.url }}" class="button mb-1">{{ right.button.text|raw }}</a>
							</div>
						{% endif %}
					</div>
				{% endif %}

			</div>
		</section>
	</div>
{% endif %}